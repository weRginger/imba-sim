#include <iostream>
#include <fstream>
#include <string>
#include <sstream>
#include <algorithm>    // std::sort
#include <vector>       // std::vector

using namespace std;

int main(int argc, char *argv[]) {
    ifstream myfile1("test1.txt");
    ifstream myfile2("test2.txt");

    ofstream fout;
    fout.open("out.txt");

	string line;
	size_t found;
    if(myfile1.is_open())
	{
		while(myfile1.good())
		{
			getline (myfile1,line);
			found = line.find("Total cache hit ratio,");
			if(found != string::npos)
			{
				cout<<line.substr(found,found+10)<<"**";
			}
		}
	}
	if(myfile2.is_open())
	{
		while(myfile2.good())
		{
			getline (myfile2,line);
			found = line.find("Total cache hit ratio,");
			if(found != string::npos)
			  {
				cout<<line.substr(found,found+10)<<endl;
			}
		}
	}
	return 0;
}
